<!doctype html>
<html lang="en">

<head>
  <title>The Bar Houch</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    .jumbotron {
      background: url('/images/home.jpeg') no-repeat center center;
      background-size: cover;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      color: white;
      margin-top: -70px;
      text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
    }

    .jumbotron::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: rgba(13, 18, 47, 0.64);
      /* overlay */
      z-index: 1;
    }


    .jumbotron>* {
      position: relative;
      z-index: 2;
    }


    .jumbotron p.display-2 {
      border-bottom: 2px solid #007bff;
      padding-bottom: 0.5rem;
    }

    .section-title {
      margin-top: 2rem;
      margin-bottom: 1rem;
      text-align: center;
    }

    .parag {
      text-align: justify;
    }

    .hovereffect {
      position: relative;
      overflow: hidden;
      cursor: pointer;
      margin: 10px;
      border-radius: 10px;
    }

    .hovereffect img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      transition: transform 0.3s ease;
    }

    .hovereffect:hover img {
      transform: scale(1.1);
    }

    .overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: rgba(0, 0, 0, 0.6);
      color: #fff;
      padding: 10px;
      text-align: center;
      width: 100%;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .hovereffect:hover .overlay {
      opacity: 1;
    }

    #about img,
    #chefs img,
    #Menus img {
      border-radius: 10px;
    }

    .menu-row {
      margin-top: 20px;
      justify-content: center;
    }
  </style>
</head>

<body>
  <%- include('./partials/header') %>

    <!-- Hero Section -->
    <div class="jumbotron text-center text-white">
      <p class="display-2">The <span class="text-info fw-bold">B</span>ar Houch</p>
      <p class="lead">READY TO BE OPENED</p>
    </div>

    <!-- About Section -->
    <section id="about" class="container my-5">
      <div class="row bg-white shadow-sm p-3 rounded">
        <div class="col-lg-6">
          <h4 class="m-3">About Us</h4>
          <p class="parag m-3">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut optio velit inventore,
            expedita quo laboriosam possimus ea consequatur vitae, doloribus consequuntur ex.</p>
          <p class="parag m-3">Nemo assumenda laborum vel, labore ut velit dignissimos. Lorem ipsum dolor sit amet,
            consectetur adipisicing elit.</p>
        </div>
        <div class="col-lg-6">
          <img src="/uploads/images/about.jpg" class="img-fluid" alt="About Image">
        </div>
      </div>
    </section>

    <!-- Chefs Section -->
    <section id="chefs" class="container my-5">
      <h4 class="section-title">Meet Our Chefs</h4>
      <p class="text-center text-muted">THEY ARE NICE & FRIENDLY</p>
      <div class="d-flex flex-wrap justify-content-center">
        <div class="hovereffect" style="width: 200px; height: 200px;">
          <img src="/uploads/sys/chef-1.jpg" alt="Ibrahim">
          <div class="overlay">
            <h5>Ibrahim</h5>
          </div>
        </div>
        <div class="hovereffect" style="width: 200px; height: 200px;">
          <img src="/uploads/sys/chef-2.jpg" alt="Ramy">
          <div class="overlay">
            <h5>Ramy</h5>
          </div>
        </div>
        <div class="hovereffect" style="width: 200px; height: 200px;">
          <img src="/uploads/sys/chef-3.jpg" alt="Lamine">
          <div class="overlay">
            <h5>Lamine</h5>
          </div>
        </div>
        <div class="hovereffect" style="width: 200px; height: 200px;">
          <img src="/uploads/sys/chef-4.jpg" alt="Krimo">
          <div class="overlay">
            <h5>Krimo</h5>
          </div>
        </div>
        <div class="hovereffect" style="width: 200px; height: 200px;">
          <img src="/uploads/sys/chef-5.jpg" alt="Islam">
          <div class="overlay">
            <h5>Islam</h5>
          </div>
        </div>
      </div>
    </section>

    <!-- Menus Section -->
    <section id="Menus" class="container my-5">
      <h4 class="section-title">Our Menus</h4>
      <p class="text-center text-muted">TEA TIME & DINING</p>
      <div class="row menu-row">
        <div class="col-md-3 hovereffect">
          <a href="/menu/category/Indian">
            <img src="/uploads/sys/indian-restaurant.jpg" class="img-fluid" alt="indian">
            <div class="overlay">
              <h5>Indian</h5>
            </div>
          </a>
        </div>
        <div class="col-md-3 hovereffect">
          <a href="/menu/category/Chinese">
            <img src="/uploads/sys/chinese-restaurant.jpeg" class="img-fluid" alt="chinese">
            <div class="overlay">
              <h5>Chinese</h5>
            </div>
          </a>
        </div>
        <div class="col-md-3 hovereffect">
          <a href="/menu/category/Italian">
            <img src="/uploads/sys/italian-restaurant.webp" class="img-fluid" alt="italian">
            <div class="overlay">
              <h5>Italian</h5>
            </div>
          </a>
        </div>
        <div class="col-md-3 hovereffect">
          <a href="/menu/category/Mexican">
            <img src="/uploads/sys/mexican-restaurant.jpg" class="img-fluid" alt="Mexican">
            <div class="overlay">
              <h5>Mexican</h5>
            </div>
          </a>
        </div>
        <div class="col-md-3 hovereffect">
          <a href="/menu/category/Cafe">
            <img src="/uploads/sys/cafe-restaurant.jpg" class="img-fluid" alt="cafe">
            <div class="overlay">
              <h5>Cafe</h5>
            </div>
          </a>
        </div>
      </div>

    </section>

    <%- include('./partials/footer') %>

      <!-- Bootstrap JS -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>