<!doctype html>
<html lang="en">
  <head>
    <title>My Profile</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>

    <style>
      .profile-card {
        max-width: 900px;
        margin: 2rem auto;
        border-radius: 15px;
        overflow: hidden;
      }
      .profile-img, 
      .avatar {
        width: 180px;
        height: 180px;
        border-radius: 50%;
        cursor: pointer;
      }
      .profile-img {
        object-fit: cover;
      }
      .avatar {
        display: flex;
        align-items: center;
        justify-content: center;
        background: #0d6efd;
        color: white;
        font-size: 4rem;
        font-weight: bold;
      }
      #uploadForm {
        display: none;
      }
    </style>
  </head>
  <body>
    <header>
      <%- include('../partials/header') %>
    </header>

    <main>
      <div class="card shadow profile-card">
        <div class="row g-0">
          <!-- Left side image / avatar -->
          <div class="col-md-4 d-flex flex-column align-items-center justify-content-center p-3">
            
            <% if (user.profileImage && user.profileImage !== "/uploads/default-avatar.png") { %>
              <!-- Show uploaded image -->
              <img src="<%= user.profileImage %>" alt="Profile Picture" class="profile-img" id="profilePic" />
            <% } else { %>
              <!-- Show default avatar -->
              <div class="avatar" id="profileAvatar">
                <%= user.username.charAt(0).toUpperCase() %>
              </div>
            <% } %>

            <!-- Hidden upload form -->
            <form id="uploadForm" action="/user/upload" method="POST" enctype="multipart/form-data">
              <input type="file" name="profileImage" id="fileInput" accept="image/*" />
            </form>

            <% if (user.profileImage && user.profileImage !== "/uploads/default-avatar.png") { %>
              <!-- Remove button only if user has custom image -->
              <form action="/user/removeProfileImage" method="POST" class="mt-2">
                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
              </form>
            <% } %>
          </div>

          <!-- Right side content -->
          <div class="col-md-8">
            <div class="card-body">
              <h3 class="card-title fw-bold"><%= user.fullName || user.username %></h3>
              <p class="text-muted mb-2">@<%= user.username %></p>

              <p class="card-text"><strong>Email:</strong> <%= user.email %></p>
              <p class="card-text"><strong>Phone:</strong> <%= user.phone || 'Not added' %></p>
              <p class="card-text"><strong>Address:</strong> <%= user.address || 'Not added' %></p>
              <p class="card-text"><strong>Bio:</strong> <%= user.bio || 'No bio available.' %></p>

              <p class="card-text">
                <small class="text-muted">Joined: <%= user.createdAt.toDateString() %></small>
              </p>

              <a href="/user/edit" class="btn btn-primary btn-sm">Edit Profile</a>
            </div>
          </div>
        </div>
      </div>
    </main>

    <footer>
      <%- include('../partials/footer') %>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      const avatar = document.getElementById("profileAvatar");
      const profilePic = document.getElementById("profilePic");
      const fileInput = document.getElementById("fileInput");

      // Click avatar or image to open file chooser
      if (avatar) avatar.addEventListener("click", () => fileInput.click());
      if (profilePic) profilePic.addEventListener("click", () => fileInput.click());

      // Auto-submit form after selecting file
      if (fileInput) {
        fileInput.addEventListener("change", () => {
          if (fileInput.files.length > 0) {
            document.getElementById("uploadForm").submit();
          }
        });
      }
    </script>
  </body>
</html>
