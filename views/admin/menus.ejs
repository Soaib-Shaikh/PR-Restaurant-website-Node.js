<%- include('./dashboardHeader') %>
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Menus</h2>
        <a href="/admin/menus/add" class="btn btn-success">Add Menu</a>
    </div>
    <table class="table table-striped table-hover shadow-sm bg-white rounded">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Restaurant</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% menus.forEach((menu, i) => { %>
            <tr>
                <td><%= i+1 %></td>
                <td><%= menu.restaurant ? menu.restaurant.name : 'N/A' %></td>
                <td><%= menu.name %></td>
                <td><%= menu.category %></td>
                <td>$<%= menu.price %></td>
                <td>
                    <% if(menu.image){ %>
                        <img src="<%= menu.image %>" width="50" height="50" class="rounded">
                    <% } %>
                </td>
                <td>
                    <a href="/admin/menus/edit/<%= menu._id %>" class="btn btn-primary btn-sm">Edit</a>
                    <form action="/admin/menus/delete/<%= menu._id %>" method="POST" class="d-inline">
                        <button class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include('./dashboardFooter') %>
